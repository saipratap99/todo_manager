<article class="main-todoBody">
  <h1 class="Todo-title">My Todo-List</h1>
  <form action="index.html" method="POST">
    <input class="Todo-addBox" type="text" placeholder="What's next?">
    <input class="Todo-Calender" type="date" placeholder="">
    <input class="Todo-AddButton" type="button" value="Add">
  </form>
  <%= render partial: "todosection-todo",locals: {todo_heading: "Overdue" , todos: Todo.overdue ,show_date: true ,overdue: true} %>
  <%= render partial: "todosection-todo",locals: {todo_heading: "Due Today", todos: Todo.due_today ,show_date: false,overdue:false } %>
  <%= render partial: "todosection-todo",locals: {todo_heading: "Due Later", todos: Todo.due_later ,show_date: true ,overdue:false} %>
</article>
