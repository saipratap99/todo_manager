<ul class="TodoSection">
  <h2 class="TodoSection-title"><%= todo_heading %><span class="TodoSection-status"><%=todos.where(completed:true).count %>/<%=todos.count %></span></h2>
  <% todos.each do |todo| %>
    <li class="TodoSection-todo" >
      <label for=<%=todo.id%> >
        <input class="TodoSection-todoCheckbox" id=<%=todo.id%> type="checkbox" <%=todo.completed ? "checked" : ""%>>
        <span <%if todo.completed==true%> style="text-decoration:line-through" <%end%>>
          <%= todo.todo_text.capitalize%>
        </span>
        <% if show_date %>
          <span class="TodoSection-dueDate"><%= todo.due_date.to_s(:short)%></span>
        <%end%>
      </label>
      <%= link_to todo,method: :delete, data: {confirm: 'Are you sure?'} do %>
        <%= image_tag "trash.png", class: "TodoSection-todoDelete" %>
      <% end %>
    </li>
  <% end %>
</ul>
